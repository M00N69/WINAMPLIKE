{
  "name": "winamp-radio-wave",
  "version": "1.0.0",
  "description": "Winamp Modern Radio Player",
  "main": "main.js",
  "author": "RadioWave Dev",
  "scripts": {
    "start": "electron .",
    "dist": "electron-builder",
    "build": "vite build"
  },
  "dependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1"
  },
  "build": {
    "appId": "com.radiowave.winamp",
    "productName": "Winamp Radio Wave",
    "win": {
      "target": "nsis",
      "icon": "icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "installerIcon": "icon.ico",
      "uninstallerIcon": "icon.ico"
    },
    "files": [
      "dist/**/*",
      "main.js",
      "index.html",
      "*.js",
      "*.css"
    ]
  }
}
